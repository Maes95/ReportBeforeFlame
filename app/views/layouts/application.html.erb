</head>

<body>
    <% if current_stakeholder %>
    <div id="wrapper">
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to "Report Before Blame", reports_path, class: "navbar-brand" %>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
            <li>
              <%= link_to '<i class="fa fa-dashboard fa-fw"></i> Reports'.html_safe, reports_path, method: :get %>
            </li>
            <li>
              <%= link_to '<i class="fa fa-user fa-fw"></i> My Profile'.html_safe, current_stakeholder, method: :get %>
            </li>
            <li>
              <%= link_to '<i class="fa fa-group fa-fw"></i> My Team'.html_safe, stakeholders_path %>
            </li>
            <li>
              <%= link_to '<i class="fa fa-book fa-fw"></i> Guide'.html_safe, guide_path %>
            </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li>
                <p class="navbar-text" id="notice"><%= notice %></p>
              </li>
              <li>
                <%= link_to '<i class="fa fa-sign-out fa-fw"></i> Logout  '.html_safe, destroy_stakeholder_session_path, method: :delete %>
              </li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>


        <!-- Page Content -->
        <div>
            <div class="container-fluid">
                          <% if !current_page?(url_for(:controller => 'main', :action => 'index')) %>
                              <div class="row">
                                <% if current_page?(url_for(:controller => 'reports', :action => 'index'))  %>
                                  <div class="col-md-1"></div>
                                  <div class="main_pane col-md-10 col-xs-12">
                                  <%= yield %>
                                  </div>
                                  <div class="col-md-1"></div>
                                <% else %>
                                  <div class="col-md-2"></div>
                                  <div class="main_pane col-md-8 col-xs-12">
                                    <%= yield %>
                                  </div>
                                  <div class="col-md-2"></div>
                                <% end %>

                              </div>
                          <% end %>
                          <%= yield :home %>
            </div>
        </div>

    </div>


    <% else %>
            <%= yield :new_session %>
            <%= yield :new_user %>
            <%= yield :home %>
    <% end %>
