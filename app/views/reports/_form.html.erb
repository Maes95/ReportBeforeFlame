
<%= form_for(@report) do |f| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% @report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-0"><input  class="form-control" id="report_title" name="report[title]" type="text" placeholder="Enter title"/></div>
    <br>
  </div>
  <div class="form-group">
    <textarea class="form-control" id="report_content" name="report[content]" rows="6" placeholder="Enter content of report"></textarea>
  </div>
  <br>

  <div>
    <%= f.select :report_type, ['Interface', 'Feedback', 'Security', 'Other'] %>
  </div>


  <div class="form-group">
    <%= f.label :priority %><br>
    <%= f.radio_button :priority, 'Low' %>
    <%= f.label "Low" %><br>
    <%= f.radio_button :priority, 'Medium', checked: true %>
    <%= f.label "Medium" %><br>
    <%= f.radio_button :priority, 'High' %>
    <%= f.label "High" %><br>
  </div>


  <div class="actions">
  <input type="submit" class="btn btn-info" value="Send report">
  </div>
<% end %>
