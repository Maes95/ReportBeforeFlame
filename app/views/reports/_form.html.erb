
<%= form_for(@report) do |f| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>
      <ul>
      <% @report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>


  <div class="form-group">
    <div class="col-sm-0"><input  class="form-control" id="report_title" name="report[title]" type="text" placeholder="Enter title" value=<%= @report.title %>></div>
    <br>
  </div>
  <div class="form-group">
    <textarea class="form-control" id="report_content" name="report[content]" rows="6" placeholder="Enter content of report" onKeyUp="cuenta()"><%= @report.content%></textarea>
    <output class="label" type="text" id="report_count" name=caracteres size=4 value=0></output>
  </div>
  <br>

  <div class="row">
      <div class="col-md-2">

      </div>

      <div class="col-md-4">
        <kbd><%= f.label :report_type %></kbd><br>
        <%= f.select :report_type, ['Interface', 'Feedback', 'Security', 'Other'] %>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <kbd><%= f.label :priority %></kbd><br>
          <%= f.radio_button :priority, 'Low' %>
          <span class="label label-success">Low</span><br>
          <%= f.radio_button :priority, 'Medium', checked: true %>
          <span class="label label-warning">Medium</span><br>
          <%= f.radio_button :priority, 'High' %>
          <span class="label label-danger">High</span><br>
        </div>
      </div>
  </div>

  <div class="actions">
  <input type="submit" class="btn btn-info" value="Send report">
  </div>
<% end %>
