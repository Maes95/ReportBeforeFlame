
<%= form_for([@report, @answer]) do |f| %>
  <% if @answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

      <ul>
      <% @answer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field"><br>
    <textarea class="form-control" id="answer_content" name="answer[content]" rows="6" placeholder="Enter content of answer" onKeyUp="cuenta()"><%= @answer.content%></textarea>
  </div>
  <div class="form-group" align=center>
    <%= f.radio_button :answer_type, "FIXED" %>
    <span class="label label-success">Fixed</span>
    <%= f.radio_button :answer_type, "CANT FIX IT"%>
    <span class="label label-danger">Can't fix it</span>
    <%= f.radio_button :answer_type, "NO FIX"%>
    <span class="label label-warning">No fix yet</span>
    <%= f.radio_button :answer_type, 'NOT NEED', checked: true %>
    <span class="label label-info">Doesn't need fix</span><br>
  </div>
  <div class="actions">
    <input type="submit" class="btn btn-info" value="Send answer">
  </div>
<% end %>
