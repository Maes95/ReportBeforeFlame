
<div class="panel panel-default">
<div class="panel-heading"><h1>TalenTank Stakeholders</h1></div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @stakeholders.each do |stakeholder| %>
      <tr>
        <td><%= link_to stakeholder.name+" "+stakeholder.lastname, stakeholder %></td>
        <td><% if stakeholder.role == "User" %>
          <span class="label label-default"><span class="glyphicon glyphicon-user" ></span> User</span>
        <% else %>
          <span class="label label-success"><span class="glyphicon glyphicon-wrench" ></span> Developer</span>
        <% end %></td>
        <td><%= stakeholder.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
